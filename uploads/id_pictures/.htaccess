# Prevent direct access to upload directories
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Block PHP execution in uploads directory
    php_flag engine off
</IfModule>

# Deny access to PHP files in this directory
<FilesMatch "\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Only allow image files
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Order allow,deny
    Allow from all
</FilesMatch>
