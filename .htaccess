# Deny access to sensitive configuration files
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

<Files "db_config.php">
    Order allow,deny
    Deny from all
</Files>

<Files "session_check.php">
    Order allow,deny
    Deny from all
</Files>

# Prevent access to backup and temporary files
<FilesMatch "\.(bak|backup|old|tmp|swp|~)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent access to hidden files
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent directory listing
Options -Indexes

# Protect .htaccess itself
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>
